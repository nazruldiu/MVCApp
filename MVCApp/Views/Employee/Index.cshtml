@model IEnumerable<MVCApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="border p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee</h2>
        </div>
        <div class="col-06">
            <a asp-controller="Employee" asp-action="create" class="btn btn-primary">
                add Employee
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Date of Joining
                    </th>
                    <th>
                        Designation
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.ImageFileName" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                        </td>
                        <td>
                            @item.FirstName @item.LastName
                        </td>
                        <td>
                            @item.DateofBirth.Date.ToShortDateString()
                        </td>
                        <td>
                            @item.Designation.Name
                        </td>
                        <td>
                            @item.Department.Name
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Employee" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Employee" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

