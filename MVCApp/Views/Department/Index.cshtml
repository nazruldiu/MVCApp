@model IEnumerable<MVCApp.Models.Department>

@{
    ViewData["Title"] = "Index";
}
<div class="border p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Department</h2>
        </div>
        <div class="col-06">
            <a asp-controller="Department" asp-action="create" class="btn btn-primary">
                add Department
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Short Order
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.SortOrder
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Department" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Department" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                            </div>               
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

